<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_error_network_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:visibility="visible">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/f_error_network_iv_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/errnetwork" />

    <TextView
        android:id="@+id/f_error_network_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="网络可能跑到外星球去了哦~"
        android:textSize="12dp"
        android:textColor="#CCCCCC"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/f_error_network_btn"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textSize="16dp"
        android:background="@drawable/dynamic_focus_gray_bg"
        android:text="重新加载"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        />
    
    <!-- <Button
        android:id="@+id/f_error_network_btn_test"
        style="@style/common_btn_small_white"
        android:layout_marginTop="20dp"
        android:text="@string/my_way_blank_btn_text" 
        /> -->
</LinearLayout>
</RelativeLayout>